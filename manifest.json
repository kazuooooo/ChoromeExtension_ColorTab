{
  "name": "ColorTab",
  "version": "0.1",
  "manifest_version": 2,

  "description": "タブの色を変更できる拡張機能",

  "permissions": [
    "tabs", "http://*/*"
  ],

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "nidonekunyoko.png",
    "default_title": "ColorTab"
  },

  "content_scripts": [
    {
      "matches": [<all_urls>],
      "js": ["onpageload.js"]
    }
  ]
}